{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "lib": ["es2019", "dom"],
        "types": ["node"],
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./",
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}