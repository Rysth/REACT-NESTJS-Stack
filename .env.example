# Server Configuration
RAILS_ENV=development
RAILS_LOG_LEVEL=debug
SECRET_KEY_BASE=some_secure
PORT=3000

# Database configuration
DB_USER=postgres
DB_PASSWORD=password
DB_HOST=postgres
# Internal default Postgres port is 5432; variable no longer required in compose
# DB_PORT=5432
DB_NAME=rails_api_development

# PostgreSQL configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=rails_api_development

# Frontend configuration
FRONTEND_URL=http://localhost:5173
VITE_API_URL=http://localhost:3000

# SMTP (generic; supports custom infra)
# For implicit TLS use port 465; for STARTTLS use 587.
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=support@rysthdesign.com
SMTP_PASSWORD=your_secure_smtp_password
SMTP_DOMAIN=example.com
# Optional: override derived domain (defaults to FRONTEND_URL host)
# SMTP_DOMAIN=example.com

# User permissions (Linux/Mac)
DOCKER_UID=1000
DOCKER_GID=1000

REDIS_URL=redis://redis-db:6379/1

# Add to your .env file
CLOUDFLARE_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
CLOUDFLARE_ACCESS_KEY_ID=your_access_key_id
CLOUDFLARE_SECRET_ACCESS_KEY=your_secret_access_key
CLOUDFLARE_BUCKET_NAME=noviSchool-assets

# Admin seed credentials (production usage; safe defaults for dev)
# In production: leave ADMIN_PASSWORD unset to auto-generate (written to tmp/initial_admin.txt)
ADMIN_EMAIL=admin@example.com
# ADMIN_PASSWORD=change_me_strong_password
# ADMIN_ROTATE_PASSWORD=false

# Hosts whitelist (comma or space separated). Added to regex for *.rysthdesign.com
# HOSTS_WHITELIST=api.blog.env.com.ec internal.blog.env.com.ec

# Rails secret key base (only required in production environment if not using credentials)
# Generate with: rails secret
# SECRET_KEY_BASE=

# SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=support@rysthdesign.com
SMTP_PASSWORD=your_secure_smtp_password