# Server Configuration (NestJS)
PORT=3000
NODE_ENV=development

# Database configuration (PostgreSQL)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=nest_api_development
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# Frontend configuration
FRONTEND_URL=http://localhost:5173
VITE_API_URL=http://localhost:3000

# Redis
REDIS_URL=redis://redis:6379

# SMTP (generic; supports custom infra)
# For implicit TLS use port 465; for STARTTLS use 587.
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=support@rysthdesign.com
SMTP_PASSWORD=your_secure_smtp_password

# User permissions (Linux/Mac)
DOCKER_UID=1000
DOCKER_GID=1000

# Cloudflare R2 Storage (optional)
CLOUDFLARE_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
CLOUDFLARE_ACCESS_KEY_ID=your_access_key_id
CLOUDFLARE_SECRET_ACCESS_KEY=your_secret_access_key
CLOUDFLARE_BUCKET_NAME=your-bucket-name
